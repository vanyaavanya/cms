extends layout

block content
  .container
    h1 Login
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Имя')
      .form-group
        input.form-control(type='password', name="password", placeholder='Пароль')
      button.btn.btn-default(type='submit') Подтвердить
      a(href='/')
        button.btn.btn-primary(type="button") Отмена